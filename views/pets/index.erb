<h1>All Pets</h1>

<hr />
<div class="row">
  <p>(Click on a pets name for details)</p>
</div>
<div class="pet">

  <% for pet in @pets %>
  <div class="pet-info">

    <p>Name: <a class="name" href="/pets/<%= pet.id %>"> <%= pet.pretty_name_pet %></a></p>
    <p>Owner: <%= pet.owner.pretty_name_owner %></p>

    <hr />
  </div>
  <% end %>

</div>
