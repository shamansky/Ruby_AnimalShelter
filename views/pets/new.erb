<div id="create-container" class="container">

  <h1>Add a Pet</h1>
  <hr/>

      <form action="/pets" method="post">
      <label for="name" >Name</label>
      <input type="text" name="name">
      <hr/>
      <label for="nickname">Nickname</label>
      <input type="text" name="nickname">
        <hr/>
      <label for="age">Age</label>
      <input type="number" name="age">
        <hr/>
      <label for="admission_date" >Admission Date</label>
      <input type="text" name="admission_date">
        <hr/>
      <label for="adoptability" >Adoptability</label>
        <select name="adoptability">
          <option value="Yes">Yes</option>
          <option value="No">No</option>
        </select>
          <hr/>
      <label for="species-selection" >Select Species:</label>
      <select name ="species" id="species-selection">
        <option value="Dogs">Dogs</option>
        <option value="Cats">Cats</option>
        <option value="Exotic Animals">Exotic Animals</option>
      </select>
      <hr/>
      <label for="breed" >Breed</label>
      <input type="text" name="breed">
      <hr/>
      <label for="owner_id">Owner</label>
      <select name="owner_id">
      <% for owner in @owners %>
      <option value="<%=owner.id%>"><%=owner.pretty_name_owner%></option>
      <%end %>
    </select>
    <hr/>
    <input type="submit" value="Save">
  </form>
</div>
